{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/order": ["error", {
      "groups": 
        [
          "external", 
          "builtin", 
          "internal", 
          "sibling", 
          "parent", 
          "index"
        ],
        "pathGroups": [
          { 
            "pattern": "@/(constants|providers|stores|components|app)", 
            "group": "internal" 
          }
        ],
        "pathGroupsExcludedImportTypes": ["internal"], 
        "alphabetize": { 
            "order": "asc", 
            "caseInsensitive": true 
        }
      }
    ] 
  }
}
